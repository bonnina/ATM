<div class="cash-machine">
    <div class="screen">
        <p id="number" name="number"></p>
    </div>
    <div id="body">
        <div class="keyboard">
            @for (var i = 1; i <= 9; i++)
            {
                <input class="key" type="button" value="@i" onclick="onKeyPress(value)" />
            }
            <input class="key" type="button" value="clear" onclick="onClear()">
            <input class="key" type="button" value="0" onclick="onKeyPress(value)">
            <input id="ok" class="key" type="submit" value="ok" onclick="onSubmit()">
        </div>
    </div>
</div>