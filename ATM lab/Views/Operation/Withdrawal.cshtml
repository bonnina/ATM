@model ATM_lab.Models.Operation
@{
    ViewData["Title"] = "Withdrawal";
}

<div class="text-center home">
    <div class="cash-machine">
        @using (Html.BeginForm("Withdrawal", "Operation", FormMethod.Post))
        {
        <form>
            <div id="screen" class="screen">
                @Html.TextBoxFor(model => model.Amount, new { @id = "inputNumber", @Value = " " })
            </div>
            @Html.HiddenFor(model => model.CardNumber)

            <partial name="_AtmPartial" />
        </form>
        }
    </div>
</div>
<div class="button-back text-left">
    <a href="@Url.Action("Index", "Home")" class="btn btn-block">
        exit
    </a>
</div>
