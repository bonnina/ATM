@model ATM_lab.Models.Card
@{
    ViewData["Title"] = "Card number";
}

<div class="text-center home">
    <div class="cash-machine">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <form>
                <div id="screen" class="screen text-left">
                    <div class="screenText">CARD NUMBER: </div>
                    @Html.TextBoxFor(model => model.CardNumber, new { @id = "inputNumber" })
                </div>
                <partial name="_AtmPartial" />
            </form>
        }
    </div>
</div>
